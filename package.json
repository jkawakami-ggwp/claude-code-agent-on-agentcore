{
  "name": "ts-langchain-agent",
  "version": "1.0.0",
  "scripts": {
    "all:install": "pnpm agent:install && pnpm infra:install && pnpm web:install",
    "agent:install": "cd packages/agent && pnpm install",
    "infra:install": "cd packages/infra && pnpm install",
    "web:install": "cd packages/web && pnpm install",
    "agent:build": "cd packages/agent && pnpm run build",
    "agent:start": "cd packages/agent && pnpm run start",
    "agent:dev": "cd packages/agent && pnpm run dev",
    "agent:cli": "cd packages/agent && pnpm run cli",
    "agent:test": "cd packages/agent && pnpm run test",
    "agent:test:watch": "cd packages/agent && pnpm run test:watch",
    "agent:test:coverage": "cd packages/agent && pnpm run test:coverage",
    "agent:lint": "cd packages/agent && pnpm run lint",
    "agent:lint:fix": "cd packages/agent && pnpm run lint:fix",
    "agent:format": "cd packages/agent && pnpm run format",
    "agent:format:check": "cd packages/agent && pnpm run format:check",
    "agent:docker:build": "cd packages/agent && docker compose build",
    "agent:docker:up": "cd packages/agent && docker compose up -d",
    "agent:docker:down": "cd packages/agent && docker compose down",
    "infra:deploy": "cd packages/infra && cdk deploy --all",
    "infra:destroy": "cd packages/infra && cdk destroy --all",
    "web:dev": "cd packages/web && pnpm dev",
    "web:build": "cd packages/web && pnpm build",
    "web:start": "cd packages/web && pnpm start"
  }
}
